    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'morph'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=morph",
                    "--package=morph"
                ],
                "filter": {
                    "name": "morph",
                    "kind": "bin"
                }
            },
            "args": [
                "${workspaceFolder}/examples/bad_struct.morph"
            ],
            "program": "${workspaceFolder}/target/debug/morph",
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "sourceLanguages": [
                "rust"
            ]
        }
    ]
}